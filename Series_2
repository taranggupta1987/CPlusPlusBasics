#include <cmath>
#include <iostream>
using namespace std;

int calculate_factorial (int i);

int calculate_factorial (int i)
{
  int output = 1;
  for (int j = 1; j <= i; ++j)
    {
      output *= j;
    }
  return output;
}

//(x/1!) â€“ (x^2/2!) + (x^3/3!) - (x^4/4!) + (x^5/5!) - (x^6/6!)......

int main ()
{
  double result = 0;
  int x;
  cout << "Enter a Num" << endl;
  cin >> x;

  for (int i = 0; i <= x; ++i)
    {
      result = result + pow (-1.0, i) * (pow (x, i + 1.0) / (calculate_factorial (i + 1)));
    }

  cout << "\n\n\n\t\t" << result;
  
  cin.ignore ();
  cin.get ();
}
